<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161335"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragments.MyAccountFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:id="@+id/left_icon"
            android:src="@drawable/icon_white_left"
            android:layout_marginLeft="65dp"/>
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="My Account"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"/>
    </FrameLayout>
    <com.vrexlab.caviar.utils.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:textSize="14sp"
        android:textColor="#BBBBBB"
        android:text="Your Email Address"
        android:layout_marginTop="68dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="94dp"
        android:background="#e9e9e9"
        android:layout_marginLeft="69dp"/>
    <com.vrexlab.caviar.utils.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="email"
        android:layout_marginTop="106dp"/>
    <com.vrexlab.caviar.utils.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:textSize="14sp"
        android:textColor="#BBBBBB"
        android:text="Connected Accounts"
        android:layout_marginTop="188dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="214dp"
        android:background="#e9e9e9"
        android:layout_marginLeft="69dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="220dp"
        android:layout_height="wrap_content">
    <com.vrexlab.caviar.utils.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:text="Twitch"
        android:textColor="#ffffff"

     />
    <Switch
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:id="@+id/twitch_swithc"
        android:layout_marginRight="55dp"
        android:layout_gravity="right"
        style="@style/Color1SwitchStyle"
        />
    </FrameLayout>
</FrameLayout>