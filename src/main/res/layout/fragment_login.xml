<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragments.LoginFragment">
    <com.vrexlab.caviar.utils.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Start!"
        android:textSize="29sp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="55dp"
        android:layout_gravity="bottom"
        android:background="@drawable/signup_later"
        android:gravity="center"
        android:id="@+id/start_now"
        android:orientation="horizontal">
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6441A4"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="21sp"
            android:text="Start Now" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
        android:layout_marginBottom="183dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:id="@+id/start_twitch"

        android:background="@drawable/start_twitch"
        android:orientation="horizontal">
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="21sp"
            android:text="Start with Twitch" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="117dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:id="@+id/start_email"

        android:background="@drawable/signup_later"
        android:orientation="horizontal">
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6441A4"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="21sp"
            android:text="Start with Email" />
    </LinearLayout>
    <com.vrexlab.caviar.utils.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6441A4"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:textSize="11sp"
        android:layout_marginBottom="25dp"
        android:text="Terms of Service and Privacy Policy" />
    <ImageView
        android:layout_width="153dp"
        android:layout_gravity="center"
        android:src="@drawable/splash_logo"
        android:layout_height="153dp" />
</FrameLayout>