<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragments.ChooseModeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/option_bg"
        android:layout_height="170dp">

        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="Switch Modes"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="40dp"
            android:background="#e9e9e9"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="57dp"
            android:padding="2dp"
            android:id="@+id/record_frame"
            android:layout_height="wrap_content">
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="35dp"
            style="@style/display_text"
            android:text="Recording"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="41dp"
            android:layout_height="28dp"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:text="âˆš"
            android:textSize="22dp"
            android:id="@+id/record_text"

            android:gravity="center"
            android:textColor="#05D2DD"
          />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="97dp"
            android:padding="2dp"
            android:id="@+id/streaming_frame"
            android:layout_height="wrap_content">
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="35dp"
            style="@style/display_text"
            android:text="Streaming"
            android:layout_height="25dp" />


        <TextView
            android:layout_width="41dp"
            android:layout_height="25dp"
            android:id="@+id/streaming_text"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:text=""
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="#05D2DD"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="130dp"
            android:background="#e9e9e9"
            />
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:id="@+id/sure_choose"
            android:text="switch"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_height="40dp" />
    </FrameLayout>

</FrameLayout>