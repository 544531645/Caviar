<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragments.DisplayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#463C9C"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="Display Option "
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e9e9e9"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="200dp"
            android:layout_marginLeft="35dp"
            style="@style/display_text"
            android:text="User Mask Perception"
            android:layout_height="25dp" />
        <Switch
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:id="@+id/mask_switch"
            android:layout_marginLeft="15dp"
            style="@style/Color1SwitchStyle"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="200dp"
            style="@style/display_text"
            android:text="Output resolution"
            android:layout_marginLeft="35dp"

            android:layout_height="25dp" />
        <Switch
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:id="@+id/resolution_switch"
            android:layout_marginLeft="15dp"
            style="@style/Color1SwitchStyle"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="200dp"
            android:layout_marginLeft="35dp"

            style="@style/display_text"
            android:text="Expected framerate"
            android:layout_height="25dp" />
        <Switch
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:id="@+id/framerate_switch"
            android:layout_marginLeft="15dp"
            style="@style/Color1SwitchStyle"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="200dp"
            android:layout_marginLeft="35dp"

            style="@style/display_text"
            android:text="Max bitrate"
            android:layout_height="25dp" />
        <Switch
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:id="@+id/bitrate_switch"
            android:layout_marginLeft="15dp"
            style="@style/Color1SwitchStyle"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="200dp"
            android:layout_marginLeft="35dp"
            style="@style/display_text"
            android:text="Alert"
            android:layout_height="25dp" />
        <Switch
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:id="@+id/alert_switch"
            android:layout_marginLeft="15dp"
            style="@style/Color1SwitchStyle"
        />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="30dp"
            android:background="#e9e9e9"
            />
        <com.vrexlab.caviar.utils.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Save"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/save_text"
            android:layout_marginTop="10dp"
            android:textColor="#99ffffff"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</FrameLayout>